@page "/users"
@inject IUserService UserService
@inject NavigationManager NavigationManager
@attribute [StreamRendering]
@* @attribute [RenderModeInteractiveServer] *@
@* @rendermode InteractiveServer  *@

<h3>UserList</h3>

@if (users == null)
{
	<span>Loading...</span>
}
else if(users.Count == 0)
{
	<span>No games found.</span>
}
else
{
	<ul>
		@foreach (FlightPath user in users)
		{
			<li>@user.Luggage</li>
			<li>@user.Fare</li>
			<li>@user.Outbound.IataOrigin</li>
			<li>@user.Outbound.IataDestination</li>
			<li>@user.Homebound.IataOrigin</li>
			<li>@user.Homebound.IataDestination</li>
		}
	</ul>
}

<button @onclick="AddUser" class="btn btn-primary">Add User</button>

@code {
	List<FlightPath>? users;

	protected override async Task OnInitializedAsync()
	{
		users = await UserService.GetAllUsers() ?? new List<FlightPath>();
	}

	void AddUser()
	{
		NavigationManager.NavigateTo("/UserCreation");
	}

}