

@page "/"
@using static Gotorz14.Model.Fligth

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>


<ul>
    @foreach (var fare in fares)
    {
        if (@fare.Price != null)    
        {
            <li>Pris: @fare.Price.Value </li>
            <li>Afrejse: @fare.DepartureDate</li>
        }   
    }

</ul>

<table class="table">
    <thead>
        <tr>
            <th>Pris</th>
            <th>Afrejse</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var fare in fares)
        {
            if (@fare.Price != null)
            {
            <tr>
                    <td>@fare.Price.Value</td>
                    <td>@fare.DepartureDate</td>

            </tr>
                
            }
        }
    </tbody>
</table>

<p>Pris: @Pris</p>

Welcome to your new app.

@code {
    string jsontext = Services.ReadJsonFile.StringFromJsonFile();

    double Pris = Services.jsonToObject.JsonDeserialize1(Services.ReadJsonFile.StringFromJsonFile()).Outbound.MinFare.Price.Value;

    List<Gotorz14.Model.Fligth.Fare> fares = Services.jsonToObject.JsonDeserialize1(Services.ReadJsonFile.StringFromJsonFile()).Outbound.Fares;

    

}