</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="flights">
                <span class="bi bi-airplane" aria-hidden="true"></span> Flights
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="hotels">
                <span class="bi bi-buildings-fill" aria-hidden="true"></span> Hotels
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="packages">
                <span class="bi bi-box2-heart" aria-hidden="true"></span> Packages
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fc">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Flight Creation
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="hc">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Hotel Creation
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fpc">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Flightpath Creation
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="pc">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Package Creation
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="chat">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Chat
            </NavLink>
        </div>

    </nav>
</div>

@code {
    private string? currentUrl;
    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

}